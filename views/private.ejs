<script>
    getPage(1);
    list_item();
    function list_item() {
        $.ajax({
            url: "/post/data",
            type: "get"
        }).then(function (data) {
            console.log(data);
            var currentPage = Math.ceil(data.length / 6)
            for (let numPage = 0; numPage < currentPage; numPage++) {
                var pagi = `
            <li class="page-item" onClick = getPage("${numPage + 1}")><button class="page-link">${numPage + 1}</button></li>
            `
                $('.pagination').append(pagi);
            }
        })
    }
    function getPage(page) {
        currentPage = page;
        $(".box").html("")
        $.ajax({
            url: "/post/page/" + page,
            type: "get"
        }).then(function (data) {
            for (let index = 0; index < data.length; index++) {
                var template = `
                <div class="col-md-4">
                    <h2>Heading</h2>
                    <table cellpadding="1">
                        <tr>
                            <td><label for="title">Title: <span id="vlTitle-${data[index]._id}">${data[index].title}</span></label></td>
                            <td><input type="text" class="input-title" name="title" id="title-${data[index]._id}" value="${data[index].title}"></td>
                        </tr>
                        <tr>
                            <td><label for="content">Content: <span id="vlContent-${data[index]._id}">${data[index].content}</span></label></td>
                            <td><input type="text" class="input-content" name="content" id="content-${data[index]._id}" value="${data[index].content}"></td>
                        </tr>
                        <tr>
                            <td><label for="author">Author: <span id="vlAuthor-${data[index]._id}">${data[index].author}</span></label></td>
                            <td><input type="text" class="input-author" name="author" id="author-${data[index]._id}" value="${data[index].author}"></td>
                        </tr>
                    </table>
                    <button class="btn btn-primary edit" id="edit-${data[index]._id}" onClick=edit("${data[index]._id}")>Edit</button>
                    <button class="btn btn-warning save" id="save-${data[index]._id}" onClick=save("${data[index]._id}")>Save</button>
                    <button type="button" class="btn btn-danger delete" id="delete-${data[index]._id}" onClick=deleteValue("${data[index]._id}") data-toggle="modal" data-target="#exampleModal">Delete</button>
                </div>
                <hr>
                    `
                $('.box').append(template);
            }
        $('.input-title').hide();
        $('.input-content').hide();
        $('.input-author').hide();
          $(".save").hide();
        })
    }
    function edit(id){
        $("#title-"+id).show();
        $("#content-"+id).show();
        $("#author-"+id).show();
        $("#vlTitle-"+id).hide();
        $("#vlContent-"+id).hide();
        $("#vlAuthor-"+id).hide();
        $("#save-"+id).show();
        $("#edit-"+id).hide();
    }
    function save(id){
        $("#title-"+id).hide();
        $("#content-"+id).hide();
        $("#author-"+id).hide();
        $("#vlTitle-"+id).show();
        $("#vlContent-"+id).show();
        $("#vlAuthor-"+id).show();
        $("#save-"+id).hide();
        $("#edit-"+id).show();
        var title = $("#title-"+id).val();
        var content = $("#content-"+id).val();
        var author = $("#author-"+id).val();
        $.ajax({
            url:"/post/"+id,
            type:"put",
            data: {
                title: title,
                content: content,
                author: author
            }
        }).then(function(data){
            alert(data.message);
            window.location.href = "/user/private";
        });
        $(".edit").show();
        $(".save").hide();
    }
    function deleteValue(id){
        $("#agree").click(function(){
            $.ajax({
                url: "/post/delete/"+id,
                type:"delete"
            }).then(function(data){
                window.location.href = "/user/private";
            })
        })
    }
    $("#btn-Logout").click(function(){
        window.location.href = "/user/logout";
    })
    $("#ok").click(function(){
        var title = $("#title").val();
        var content = $("#content").val();
        var author= $("#author").val();
        $.ajax({
            url: "/post/create-post",
            type: "post",
            data: {
                title : title,
                content: content,
                author: author
            } 
        }).then(function(data){
            window.location.href = "/user/private";
        })
    })    
</script>

